<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.example.quaddie.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Ilogo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="392dp"
        android:text="uaddie"
        android:textSize="60sp" />

    <Button
        android:id="@+id/bMap"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bTutorial"
        android:layout_alignBottom="@+id/bTutorial"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/bTutorial"
        android:background="@drawable/button"
        android:textSize="30sp"
        android:text="Map" />

    <ImageButton
        android:id="@+id/bSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:src="@drawable/settings" />

    <Button
        android:id="@+id/bTutorial"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Ilogo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="233dp"
        android:text="Tutorial"
        android:background="@drawable/button"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/Ilogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/bTutorial"
        android:layout_marginBottom="39dp"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/quaddielogo" />

</RelativeLayout>